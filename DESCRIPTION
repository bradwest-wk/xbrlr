Encoding: UTF-8
LazyData: true
Imports:
    dplyr,
    igraph,
    RColorBrewer,
    readr,
    readxl,
    stringr,
    tidyr
Depends: R (>= 3.3.3)
RoxygenNote: 6.0.1
